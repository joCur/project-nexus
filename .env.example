# Project Nexus Environment Configuration
# Copy this file to .env and update values for your environment

#######################
# Environment Settings
#######################
NODE_ENV=development
DOCKER_TARGET=build

#######################
# Service Ports
#######################
BACKEND_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081

#######################
# Database Configuration
#######################
POSTGRES_DB=nexus_db
POSTGRES_USER=nexus
POSTGRES_PASSWORD=nexus_secure_2024
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# PostgreSQL Performance Settings
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=128MB
POSTGRES_EFFECTIVE_CACHE_SIZE=4GB
POSTGRES_WORK_MEM=4MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB

#######################
# Redis Configuration
#######################
REDIS_PASSWORD=
REDIS_DB=0

#######################
# Auth0 Configuration
#######################
# Required: Get these from your Auth0 Dashboard
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_AUDIENCE=https://api.nexus.app

# Auth0 Management API (for user management)
AUTH0_MANAGEMENT_CLIENT_ID=your_management_client_id
AUTH0_MANAGEMENT_CLIENT_SECRET=your_management_client_secret

#######################
# JWT Configuration
#######################
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=24h

#######################
# API Configuration
#######################
API_VERSION=v1
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

#######################
# OpenAI Configuration
#######################
# Required: Get from OpenAI Dashboard
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=text-embedding-ada-002

#######################
# Logging Configuration
#######################
LOG_LEVEL=info
LOG_FORMAT=json

#######################
# Security Configuration
#######################
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production-minimum-32-chars

#######################
# Data Storage
#######################
DATA_DIR=./data

#######################
# Development Tools (Admin Interfaces)
#######################
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

#######################
# Production Security (Override in production)
#######################
# Use strong, unique values in production:
# - Generate JWT_SECRET with: openssl rand -base64 32
# - Generate SESSION_SECRET with: openssl rand -base64 32
# - Use environment-specific database passwords
# - Enable Redis AUTH with REDIS_PASSWORD
# - Configure Auth0 with production domains
# - Set CORS_ORIGIN to your production domains only