{
  "name": "Project Nexus - Full Stack Development",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "workspace",
  "runServices": [
    "postgres",
    "redis",
    "adminer"
  ],
  "workspaceFolder": "/workspaces/project-nexus",

  // Port forwarding for all services
  "forwardPorts": [3000, 3001, 5432, 6379, 8080],
  // Required for coder workspaces
  "portsAttributes": {
    "3000": {
      "label": "Backend API (GraphQL)",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Frontend Web (Next.js)",
      "onAutoForward": "openBrowserOnce"
    },
    "5432": {
      "label": "PostgreSQL Database",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis Cache",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "Adminer (Database Admin)",
      "onAutoForward": "openBrowserOnce"
    }
  },

  // VS Code extensions for full-stack development
  "customizations": {
    "vscode": {
      "extensions": [
        // TypeScript and JavaScript
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",

        // GraphQL
        "graphql.vscode-graphql",
        "graphql.vscode-graphql-syntax",

        // Database tools
        "ms-ossdata.vscode-postgresql",
        "cweijan.vscode-redis-client",

        // Git and GitHub
        "github.vscode-pull-request-github",

        // Testing and quality
        "ms-vscode.test-adapter-converter",
        "orta.vscode-jest",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-eslint",

        // General development
        "redhat.vscode-yaml",
        "ms-vscode.vscode-markdown"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "typescript.preferences.importModuleSpecifier": "relative",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/.next": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/.next": true
        }
      }
    }
  },

  // Features to install
  "features": {
    "ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {}
  },

  // Container environment variables
  "containerEnv": {
    "NODE_ENV": "development",
    "POSTGRES_HOST": "postgres",
    "POSTGRES_PORT": "5432",
    "POSTGRES_DB": "nexus_db",
    "POSTGRES_USER": "nexus",
    "POSTGRES_PASSWORD": "nexus_secure_2024",
    "REDIS_HOST": "redis",
    "REDIS_PORT": "6379",
    "REDIS_PASSWORD": "",
    "BACKEND_PORT": "3000",
    "WEB_PORT": "3001",
    "ADMINER_DEFAULT_SERVER": "postgres",
    "ADMINER_DEFAULT_USER": "nexus",
    "ADMINER_DEFAULT_PASSWORD": "nexus_secure_2024",
    "ADMINER_DEFAULT_DB": "nexus_db",
    "DOCKER_ENV": "true"
  },

  // Lifecycle commands
  "postCreateCommand": "npm i && npm install --prefix backend && npm install --prefix clients/web"
}
