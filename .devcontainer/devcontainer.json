{
  "name": "Project Nexus - Full Stack Development",
  "dockerComposeFile": "docker-compose.dev.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // Port forwarding for all services
  "forwardPorts": [3000, 3001, 5432, 6379, 8080, 8081],
  "portsAttributes": {
    "3000": {
      "label": "Backend API (GraphQL)",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Frontend Web (Next.js)",
      "onAutoForward": "openPreview"
    },
    "5432": {
      "label": "PostgreSQL Database",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis Cache",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "Adminer (Database Admin)",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "Redis Commander",
      "onAutoForward": "notify"
    }
  },

  // VS Code extensions for full-stack development
  "customizations": {
    "vscode": {
      "extensions": [
        // TypeScript and JavaScript
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",

        // GraphQL
        "graphql.vscode-graphql",
        "graphql.vscode-graphql-syntax",

        // Database tools
        "ms-ossdata.vscode-postgresql",
        "cweijan.vscode-redis-client",

        // Git and GitHub
        "github.vscode-pull-request-github",
        "github.copilot",
        "github.copilot-chat",
        "eamodio.gitlens",

        // Testing and quality
        "ms-vscode.test-adapter-converter",
        "orta.vscode-jest",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-eslint",

        // General development
        "ms-vscode.vscode-docker",
        "ms-azuretools.vscode-docker",
        "ms-vscode.remote-containers",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-markdown"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "typescript.preferences.importModuleSpecifier": "relative",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/.next": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/.next": true
        }
      }
    }
  },

  // Features to install (works with Docker Compose)
  "features": {
    "ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {}
  },

  // Simple lifecycle commands
  "postCreateCommand": "npm install --prefix backend && npm install --prefix clients/web",
  "postStartCommand": "echo 'üöÄ DevContainer ready!' && echo 'üìä Services:' && echo '  PostgreSQL: localhost:5432' && echo '  Redis: localhost:6379' && echo '  Adminer: http://localhost:8080' && echo '  Redis Commander: http://localhost:8081' && echo '' && echo 'üóÑÔ∏è  Adminer login details:' && echo '  Server: postgres' && echo '  Username: nexus' && echo '  Password: nexus_secure_2024' && echo '  Database: nexus_db' && echo '' && echo 'üí° Quick Adminer URL:' && echo '  http://localhost:8080/?server=postgres&username=nexus&db=nexus_db'"
}
