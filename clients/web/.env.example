# Project Nexus Web Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# ======================
# Auth0 Configuration
# ======================
AUTH0_SECRET=your-32-character-secret-for-auth0-session-encryption
AUTH0_BASE_URL=http://localhost:3001
AUTH0_ISSUER_BASE_URL=https://your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.nexus.app

# ======================
# API Configuration
# ======================
GRAPHQL_ENDPOINT=http://localhost:3000/graphql
API_BASE_URL=http://localhost:3000

# ======================
# Development Configuration
# ======================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# ======================
# Cache Configuration (seconds)
# ======================
# Onboarding status cache TTL (default: 300 seconds / 5 minutes)
NEXT_PUBLIC_CACHE_ONBOARDING_TTL=300

# User profile cache TTL (default: 900 seconds / 15 minutes)
NEXT_PUBLIC_CACHE_USER_PROFILE_TTL=900

# Session info cache TTL (default: 60 seconds / 1 minute)
NEXT_PUBLIC_CACHE_SESSION_TTL=60