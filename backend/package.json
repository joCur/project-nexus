{
  "name": "project-nexus-backend",
  "version": "1.0.0",
  "description": "Project Nexus Backend API with Auth0 Authentication",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:status": "knex migrate:status",
    "migrate:container": "npm run migrate:wait && npm run migrate",
    "migrate:wait": "node -e \"const{Client}=require('pg');const c=new Client({host:process.env.DOCKER_ENV?'postgres':'localhost',port:5432,database:process.env.POSTGRES_DB||'nexus_db',user:process.env.POSTGRES_USER||'nexus',password:process.env.POSTGRES_PASSWORD||'nexus_secure_2024'});async function w(){let r=0;while(r<30){try{await c.connect();await c.query('SELECT 1');console.log('Database ready');c.end();return}catch(e){console.log(`Waiting for database... (${r+1}/30)`);await new Promise(res=>setTimeout(res,2000));r++}}throw new Error('Database not ready after 60s')}w().catch(e=>{console.error(e.message);process.exit(1)})\"",
    "seed": "knex seed:run",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/merge": "^9.0.1",
    "@graphql-tools/schema": "^10.0.0",
    "apollo-server-core": "^3.13.0",
    "apollo-server-express": "^3.12.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.11",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^30.0.5",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "graphql",
    "auth0",
    "typescript",
    "postgresql",
    "redis",
    "api"
  ],
  "author": "Project Nexus Team",
  "license": "MIT"
}
