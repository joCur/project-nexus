{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.test.ts", 
    "src/**/*.spec.ts",
    "node_modules/**/*",
    "dist/**/*",
    "logs/**/*",
    ".git/**/*",
    "*.md"
  ],
  "exec": "ts-node -r tsconfig-paths/register src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "legacyWatch": true,
  "polling": true,
  "pollInterval": 1000,
  "delay": 500,
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "runOnChangeOnly": false,
  "signal": "SIGTERM"
}