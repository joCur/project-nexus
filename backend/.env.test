# Test Environment Configuration
# This file contains environment variables specifically for testing

NODE_ENV=test
DOCKER_ENV=false

# Database Configuration for Testing
POSTGRES_DB=nexus_test
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_TIMEOUT=10000

# Redis Configuration for Testing
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Auth0 Test Configuration
AUTH0_DOMAIN=test.auth0.com
AUTH0_CLIENT_ID=test_client_id
AUTH0_CLIENT_SECRET=test_client_secret
AUTH0_AUDIENCE=https://test-api.nexus-app.de
AUTH0_MANAGEMENT_CLIENT_ID=test_management_client_id
AUTH0_MANAGEMENT_CLIENT_SECRET=test_management_client_secret

# JWT Test Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-purposes-only-must-be-32-chars
